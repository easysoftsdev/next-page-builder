generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Page {
  id        String   @id @default(cuid())
  slug      String   @unique
  schema    Json
  version   Int      @default(1)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model MediaGallery {
  id        String   @id @default(cuid())
  title     String?
  alt       String?
  url       String   @unique
  fileName  String
  fileType  String
  size      Int
  createdAt DateTime @default(now())
}
